<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="0005-1" author="mt">
        <createTable tableName="uploaded_file">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="file_name" type="VARCHAR(500)"/>
            <column name="file_data" type="BLOB"/>
        </createTable>
    </changeSet>
    <changeSet id="0003-2" author="mt">
        <addColumn tableName="necrology">
            <column name="file_id" type="BIGINT"/>
        </addColumn>
        <addForeignKeyConstraint baseTableName="necrology"
                                 baseColumnNames="file_id"
                                 constraintName="fk_necrology_file_id__uploaded_file_id"
                                 referencedTableName="uploaded_file"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
